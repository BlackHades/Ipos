@{
    Layout = null;
}

<style>
    .block-ui-overlay {
        background-color: rgba(98, 95, 95, 0.62);
    }
</style>

<div class="col-lg-12" >
    <div class="card-box">

        <h2 class="text-dark header-title m-t-0 m-b-30"><span><i class="fa fa-envelope"></i> Compose SMS</span></h2>

        <div class="row">
            <div class="col-md-12">

                <form class="form-horizontal" role="form" ng-submit="vm.sendSms($event,'@Url.Content("~/api/toolsapi/sendsms")')">
                    <div class="row m-b-30">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="receipients">Name</label>

                                <div class="col-md-7" ng-hide="aorf">
                                    <input type="text" id="receipients" ng-model="vm.sms.receipients" class="form-control" placeholder="receipients">
                                </div>

                                <div class="col-md-7" ng-show="aorf">
                                    <input type="file" id="receipients" file-model="vm.sms.receipientList" data-input="false" class="filestyle" data-iconname="fa fa-cloud-upload">
                                </div>

                                <div class="col-sm-2">
                                    <div class="checkbox checkbox-primary">
                                        <input ng-model="aorf" type="checkbox" id="checkbox">
                                        <label for="checkbox">
                                            Upload a file
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="message">Message</label>
                                <div class="col-md-9">
                                    <textarea id="message" ng-maxlength="1000" ng-model="vm.sms.message" class="form-control" rows="4" required="" name="description"> </textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-5 ">
                                <button type="submit" class="btn btn-purple waves-effect waves-light"> <span>Send</span> <i class="fa fa-send m-l-10"></i> </button>
                                <button type="reset" class="btn btn-danger waves-effect waves-light">
                                    <span class="btn-label">
                                        <i class="fa fa-times"></i>
                                    </span>Cancel
                                </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(":file").filestyle({ placeholder: "Upload text file containing recepients list" });
</script>