
@{
    Layout = null;
}
<style>
    .block-ui-overlay {
        background-color: rgba(98, 95, 95, 0.62);
    }
</style>

<div class="col-lg-12" ng-init="getUserAccount('@Url.Content("~/api/authapi/getuserAccount/?accountid=")',user.id)">
    <div class="card-box">
        <h2 class="text-dark header-title m-t-0 m-b-30"><span><i class="fa fa-user"></i>User Account Details</span></h2>

        <div class="row" block-ui="userCreateBlockUI">
            <div class="col-md-12 col-sm-12 col-xs-12">

                <form id="userform" class="form-horizontal" name="userform">

                    <div class="row m-b-30">
                        <div class="col-md-6 col-sm-6 col-xs-6">

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="username">Username</label>
                                <div class="col-md-9">
                                    <input type="text" tabindex="1"
                                           readonly ng-model="user.userName" minlength="6" required class="form-control" id="username" name="username">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="firstname">First Name</label>
                                <div class="col-md-9">
                                    <input type="text" tabindex="3" ng-model="user.firstName" class="form-control" id="firstname" name="firstname" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="phonenumber">Phone Number</label>
                                <div class="col-md-9">
                                    <input type="text" tabindex="5" class="form-control" ng-model="user.phoneNumber" id="phonenumber" name="phonenumber" readonly>
                                </div>
                            </div>

                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox checkbox-primary">
                                    <input ng-model="user.status" id="d" type="checkbox" tabindex="7" disabled>
                                    <label for="d">
                                        Activate
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="email">Email</label>
                                <div class="col-md-9">
                                    <input type="email" tabindex="2" class="form-control" required ng-model="user.email" id="email" name="email" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="lastname">Last Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" tabindex="4" ng-model="user.lastName" id="lastname" name="lastname" readonly>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-3 control-label" for="s2id_autogen2">Roles</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("role", ViewBag.roles as IEnumerable<SelectListItem>, new { @class = "form-control select2", tabindex = "7", multiple = "", ng_model = "user.role", data_placeholder = "Please select role(s)", ng_disabled="true" })
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-7 col-sm-offset-1">
                            <a ui-sref="app" class="btn btn-warning waves-effect waves-light">
                                <span class="btn-label">
                                    <i class="fa fa-arrow-circle-o-left"></i>
                                </span>Back to User List
                            </a>
                            
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('.select2').select2();
</script>