        <div class="row" block-ui="categoryEditBlockUI">
            <div class="col-md-12">
                <form class="form-horizontal" method="post" role="form" id="editCategory"
                      ng-submit="editcategories($event,'@Url.Content("~/api/categoryapi/edititemcategory")')">

                    <div class="row m-b-30">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="categoryName">Name</label>

                                <div class="col-md-9">
                                    <input type="text" id="productName" class="form-control" ng-model="categoryItemLog.name" required="" name="name">
                                </div>
                            </div>

                            <input type="hidden" value="{{categoryItemLog.categoryUId}}" name="categoryUId" />

                            <div class="form-group">
                                <label class="col-md-3 control-label" for="description">Description</label>
                                <div class="col-md-9">
                                    <textarea id="description" class="form-control" rows="3" required="" ng-model="categoryItemLog.description" name="description"> </textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4 ">
                                <a ui-sref="list" class="btn btn-warning waves-effect waves-light">
                                    <span class="btn-label">
                                        <i class="fa fa-arrow-circle-o-left"></i>
                                    </span>Back to Category List
                                </a>
                                <button type="submit" class="btn btn-success waves-effect waves-light"> <i class="ion-loop m-r-5"></i> <span>Update</span> </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>
</div>

