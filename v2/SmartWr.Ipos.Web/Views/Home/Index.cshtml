@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    
</style>

<div class="content" ng-controller="dashCtrl">
    <div class="container">

        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">Dashboard</h4>
                <p class="text-muted page-title-alt">Welcome back, @User.Identity.Name </p>
            </div>
        </div>
          <div class="row" ng-init="initSalesTransaction('@Url.Content("~/api/iposreportapi/getdashboardsales")')">
            <div class="col-md-6 col-lg-4">
                <div class="widget-bg-color-icon card-box fadeInDown animated">
                    <div class="bg-icon bg-icon-info pull-left">
                        <i class="fa fa-money text-info"></i>
                    </div>
                    <div class="text-right">
                        <h3 class="text-dark"><b class="counter">{{transactions.totalTodaySales| number: 2}}</b></h3>
                        <p class="text-muted">Today Sales</p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="widget-bg-color-icon card-box">
                    <div class="bg-icon bg-icon-pink pull-left">
                        <i class="md md-add-shopping-cart text-pink"></i>
                    </div>
                    <div class="text-right">
                        <h3 class="text-dark"><b class="counter">{{transactions.totalWeekSales|number:2}}</b></h3>
                        <p class="text-muted">Current Week Sales</p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="widget-bg-color-icon card-box">
                    <div class="bg-icon bg-icon-purple pull-left">
                        <i class="md md-equalizer text-purple"></i>
                    </div>
                    <div class="text-right">
                        <h3 class="text-dark"><b class="counter">{{transactions.totalTransactionCount}}</b></h3>
                        <p class="text-muted">Total Transaction </p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <ui-view></ui-view>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/App/dashboard/dashboardCtrl.js"></script>
}