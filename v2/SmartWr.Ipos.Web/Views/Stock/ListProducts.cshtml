    $(function () {
        $('#wasteForm').validate({
            rules: {
                name: {
                    required: true
                },
                description: {
                    required: true
                },
                quantity: {
                    required: true,
                    number: true
                }
            },

            messages: {
                name: {
                    required: "The product Title field is required"
                },
                description: {
                    required: "The Description field is required"
                },
                quantity: {
                    required: "Enter the quantity of the product",
                    number: "Please enter a number not a text"
                }
            }
        });

        if ($('#Input').validate() === true) {
            $(('#Input').error('border-color', 'red'));
        }
    });

    $(function () {
        $('#quantityForm').validate({
            rules: {
                name: {
                    required: true
                },
                description: {
                    required: true
                },
                quantity: {
                    required: true,
                    number: true
                }
            },

            messages: {
                name: {
                    required: "The product Title field is required"
                },
                quantity: {
                    required: "Enter the quantity of the product",
                    number: "Please enter a number not a text"
                }
            }
        });

        if ($('#Input').validate() === true) {
            $(('#Input').error('border-color', 'red'));
        }
    });

   
</script>